<%= stylesheet_link_tag 'form', media: 'all', 'data-turbolinks-track': 'reload' %>
<div class="wrapper">
  <div id="formContent">
    <!-- Tabs Titles -->
    <h2 class="active"> Sign Up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email", class: "field_log" %>
          <%= f.password_field :password, autocomplete: "off", placeholder: "password", class: "field_log" %>
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "password confirmation", class: "field_log" %>
      </div>
      <div class="actions">
        <%= f.submit "Sign Up", class: "btn_submit" %>
      </div>  
      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%> 
    <% end %>
    <!-- Remind Passowrd -->
    <div id="formFooter">     
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>