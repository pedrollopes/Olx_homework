<%= stylesheet_link_tag 'form', media: 'all', 'data-turbolinks-track': 'reload' %>
<div class="wrapper">
  <div id="formContent">
    <!-- Tabs Titles -->
    <h2 class="active"> Log in </h2>
    <!-- Login Form -->
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email", class: "field_log" %>         
        <%= f.password_field :password, autocomplete: "off", placeholder: "password", class: "field_log" %>
      </div>     
      <div class="actions">
        <%= f.submit "Log in" ,class: "btn_submit"%>
      </div>
      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>
    <% end %>
    <!-- Remind Passowrd -->
    <div id="formFooter">     
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>