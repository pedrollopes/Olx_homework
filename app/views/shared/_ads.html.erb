<% @ads.each do |ad| %>
<div class="col-sm-4 col-lg-4 col-md-4">
  <div class="thumbnail">
    <%= image_tag ad.image_url %>
    <div class="caption">
      <h4 class="pull-right"><%= humanized_money_with_symbol ad.price %></h4>
      <h4><%= link_to  truncate(ad.title, length: 20), ad_detail_path(ad) %></h4>
      <p><%= truncate(ad.description, length: 100) %></p>
    </div>
    <div class="ratings">
      <p>Criado por <%= ad.member.email %></p>
    </div>
  </div>
</div>
<% end %>