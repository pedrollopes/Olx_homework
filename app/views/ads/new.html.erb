
<h1>Novo Anuncio</h1>

<%= form_for @ad, html: { multipart: true } do |f| %>

<div class="row">
  <div class="col-xs-6">
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control", placeholder: "Título" %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-2">
    <div class="form-group">
      <%= f.label :price %>
      <div class="input-group">
        <div class="input-group-addon"><%= @ad.price.currency.symbol %></div>
          <%= f.text_field :price, class: "form-control", placeholder: "Título" %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-6">
    <div class="form-group">
      <%= f.label :image %> <br>
      <%= f.file_field :image, class: "btn" %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control", rows: 10 %>
    </div>
  </div>
</div>

<%= submit_tag "Enviar", class: "btn btn-default"  %>
<% end %>